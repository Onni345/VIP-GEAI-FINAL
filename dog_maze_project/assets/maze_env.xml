<?xml version="1.0"?>
<mujoco model="scratch_maze_tall">
  <compiler angle="radian" coordinate="local"/>
  <option gravity="0 0 -9.81" timestep="0.01" integrator="RK4"/>

  <default>
    <geom contype="1" conaffinity="1" friction="1 0.1 0.1" rgba="0.45 0.45 0.6 1"/>
    <site size="0.28" rgba="0 1 0 1"/>
  </default>

  <asset>
    <texture name="floor_tex" type="2d" builtin="checker" width="512" height="512"
             rgb1="0.25 0.25 0.25" rgb2="0.35 0.35 0.35"/>
    <material name="floor_mat" texture="floor_tex" texrepeat="6 6" reflectance="0.2"/>
    <material name="wall_mat"  rgba="0.55 0.6 0.75 1"/>
    <material name="entry_mat" rgba="1 0.6 0 1"/>
    <material name="exit_mat"  rgba="0 0.9 0.2 1"/>
  </asset>

  <worldbody>
    <geom name="floor" type="plane" pos="0 0 -0.02" size="6 6 0.1" material="floor_mat"/>

    <!-- outer frame with 0.8-m-wide gaps at entry & exit -->
    <geom name="wall_n" type="box" size="5   0.12 0.6" pos="0     3    0.6" material="wall_mat"/>
    <geom name="wall_s_l" type="box" size="2.6 0.12 0.6" pos="-2.4 -3 0.6" material="wall_mat"/>
    <geom name="wall_s_r" type="box" size="2.6 0.12 0.6" pos=" 2.4 -3 0.6" material="wall_mat"/>
    <geom name="wall_w_u" type="box" size="0.12 1.6 0.6" pos="-5  1.4 0.6" material="wall_mat"/>
    <geom name="wall_w_d" type="box" size="0.12 1.6 0.6" pos="-5 -1.4 0.6" material="wall_mat"/>
    <geom name="wall_e_u" type="box" size="0.12 1.6 0.6" pos=" 5  1.4 0.6" material="wall_mat"/>
    <geom name="wall_e_d" type="box" size="0.12 1.6 0.6" pos=" 5 -1.4 0.6" material="wall_mat"/>

    <!-- horizontal interior walls -->
    <geom name="h1"  type="box" size="1.6 0.12 0.55" pos="-2.4  2   0.55" material="wall_mat"/>
    <geom name="h2"  type="box" size="2.3 0.12 0.55" pos=" 0.7  2   0.55" material="wall_mat"/>
    <geom name="h3"  type="box" size="1.3 0.12 0.55" pos="-3.7  1   0.55" material="wall_mat"/>
    <geom name="h4"  type="box" size="1.0 0.12 0.55" pos="-0.9  1   0.55" material="wall_mat"/>
    <geom name="h5"  type="box" size="1.3 0.12 0.55" pos=" 2.6  1   0.55" material="wall_mat"/>
    <geom name="h6"  type="box" size="2.4 0.12 0.55" pos=" 0.0  0   0.55" material="wall_mat"/>
    <geom name="h7"  type="box" size="1.2 0.12 0.55" pos=" 3.4  0   0.55" material="wall_mat"/>
    <geom name="h8"  type="box" size="2.6 0.12 0.55" pos="-2.2 -1  0.55" material="wall_mat"/>
    <geom name="h9"  type="box" size="1.5 0.12 0.55" pos=" 1.7 -1  0.55" material="wall_mat"/>
    <geom name="h10" type="box" size="1.5 0.12 0.55" pos="-3.6 -2  0.55" material="wall_mat"/>
    <geom name="h11" type="box" size="2.4 0.12 0.55" pos=" 0.4 -2  0.55" material="wall_mat"/>
    <geom name="h12" type="box" size="1.6 0.12 0.55" pos=" 3.4 -2  0.55" material="wall_mat"/>

    <!-- vertical interior walls -->
    <geom name="v1"  type="box" size="0.12 1.0 0.55" pos="-4  1.5 0.55" material="wall_mat"/>
    <geom name="v2"  type="box" size="0.12 1.3 0.55" pos="-2  1.5 0.55" material="wall_mat"/>
    <geom name="v3"  type="box" size="0.12 1.0 0.55" pos=" 0  1.5 0.55" material="wall_mat"/>
    <geom name="v4"  type="box" size="0.12 1.0 0.55" pos=" 2  1.5 0.55" material="wall_mat"/>
    <geom name="v5"  type="box" size="0.12 1.3 0.55" pos=" 4  1.5 0.55" material="wall_mat"/>
    <geom name="v6"  type="box" size="0.12 1.0 0.55" pos="-3  0.5 0.55" material="wall_mat"/>
    <geom name="v7"  type="box" size="0.12 1.3 0.55" pos="-1  0.5 0.55" material="wall_mat"/>
    <geom name="v8"  type="box" size="0.12 1.0 0.55" pos=" 1  0.5 0.55" material="wall_mat"/>
    <geom name="v9"  type="box" size="0.12 1.3 0.55" pos=" 3  0.5 0.55" material="wall_mat"/>
    <geom name="v10" type="box" size="0.12 1.0 0.55" pos="-4 -0.5 0.55" material="wall_mat"/>
    <geom name="v11" type="box" size="0.12 1.0 0.55" pos="-2 -0.5 0.55" material="wall_mat"/>
    <geom name="v12" type="box" size="0.12 1.3 0.55" pos=" 0 -0.5 0.55" material="wall_mat"/>
    <geom name="v13" type="box" size="0.12 1.0 0.55" pos=" 2 -0.5 0.55" material="wall_mat"/>
    <geom name="v14" type="box" size="0.12 1.3 0.55" pos=" 4 -0.5 0.55" material="wall_mat"/>

    <site name="entry" pos="-4.5 2.8 0.12" size="0.48" material="entry_mat"/>
    <site name="exit"  pos=" 4.5 -2.8 0.12" size="0.48" material="exit_mat"/>

    <light diffuse="0.85 0.85 0.85" pos="0 0 6" dir="0 0 -1"/>
  </worldbody>
</mujoco>
